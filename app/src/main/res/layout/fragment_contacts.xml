<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".view.ContactsFragment" android:id="@+id/frameLayout">
    <LinearLayout
                  android:orientation="horizontal"
                  android:layout_width="match_parent"
                  android:layout_margin="5dp"

                  android:layout_height="wrap_content">

        <TextView
                android:id="@+id/tv"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="#42f4ce"

                android:textSize="25sp"
                android:textStyle="bold"



                android:text="Groups"

        />

        <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="#000"

                android:textSize="25sp"
                android:textStyle="bold"
                android:gravity="center"

                android:text="Contacts"

        />

        <TextView
                android:id="@+id/tv_add_contact"
                android:layout_gravity="right"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="#42f4ce"
                android:textSize="35sp"
                android:gravity="right"
                android:textStyle="bold"
                android:text="+"
                android:layout_marginRight="15dp"

        />
    </LinearLayout>
 <androidx.recyclerview.widget.RecyclerView

            android:id="@+id/recyclerView"
            android:scrollbars="vertical"
            android:layout_width="match_parent"
            android:background="#dae8e5"
            android:layout_height="wrap_content" tools:layout_conversion_absoluteHeight="731dp"
            tools:layout_editor_absoluteY="0dp" tools:layout_editor_absoluteX="0dp"
            tools:layout_conversion_absoluteWidth="411dp"/>
</LinearLayout>